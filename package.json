{
    "name": "task-management-api",
    "version": "1.0.0",
    "description": "A RESTful API for Task Management with Node.js, Express, PostgreSQL, and JWT authentication",
    "main": "dist/app.js",
    "scripts": {
        "dev": "nodemon --exec ts-node src/app.ts",
        "build": "tsc",
        "start": "node dist/app.js",
        "migrate": "sequelize-cli db:migrate --config src/database/sequelize.config.cjs",
        "migrate:undo": "sequelize-cli db:migrate:undo --config src/database/sequelize.config.cjs",
        "migrate:undo:all": "sequelize-cli db:migrate:undo:all --config src/database/sequelize.config.cjs",
        "generate": "npx sequelize-cli migration:generate --name role-model",
        "db:seed": "sequelize-cli db:seed:all --config src/database/sequelize.config.cjs",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix"
    },
    "keywords": [
        "node.js",
        "express",
        "postgresql",
        "jwt",
        "api",
        "typescript"
    ],
    "author": "Akindele Simeon",
    "license": "MIT",
    "dependencies": {
        "@paralleldrive/cuid2": "^2.2.2",
        "@types/compression": "^1.8.0",
        "@types/cookie-parser": "^1.4.8",
        "@types/pino-http": "^5.8.4",
        "@types/pino-pretty": "^4.7.5",
        "bcryptjs": "^2.4.3",
        "compression": "^1.8.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "http-error": "^0.0.6",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "pino": "^9.7.0",
        "pino-http": "^10.4.0",
        "pino-pretty": "^13.0.0",
        "sequelize": "^6.35.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "zod": "^3.25.28"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.8",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.17.50",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "@typescript-eslint/eslint-plugin": "^6.9.1",
        "@typescript-eslint/parser": "^6.9.1",
        "eslint": "^8.52.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "sequelize-cli": "^6.6.2",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
